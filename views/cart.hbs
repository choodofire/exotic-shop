<h1>Корзина</h1>
<div id="cart">
    {{#if animals.length}}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Кол-во</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {{#each animals}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{_id}}">Удалить</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Цена: </strong><span class="price">{{price}}</span></p>
        <form action="/orders" method="post">
            <button type="submit" class="btn">Сделать заказ</button>
        </form>
    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>
