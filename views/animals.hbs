<h1>Animals</h1>
<div class="col">
        {{#if animals.length}}
            <div class="row">
                {{#each animals}}
                    <div class="card-link">
                        <a href="/animals/{{_id}}">
                            <div class="col">
                                <div class="card animal">
                                    <div class="card-image">
                                        <img src="{{img}}" alt="{{title}}">
                                    </div>
                                    <div class="card-content animal-description">
                                        <span class="card-title">{{title}}</span>
                                        <p class="price">{{price}}</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p>Животных нет</p>
        {{/if}}
</div>
