<h1>animals</h1>

{{#if animals.length}}
    {{#each animals}}
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-image">
                    <img src="{{img}}" alt="{{title}}">
                </div>
                <div class="card-content">
                    <span class="card-title">{{title}}</span>
                    <p class="price">{{price}}</p>
                </div>
                <div class="card-action">
                    <a href="/animals/{{id}}">Открыть страницу</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
{{else}}
    <p>Животных нет</p>
{{/if}}