<div>
    <div id="loginPopup" class="popup">
        <div class="popup__body">
            <div class="popup__content">

                <a href="#" class="popup__close close-popup">X</a>
                <div class="popup__title">Вход в аккаунт</div>
                <div class="popup__text">

                    <div class="auth">
                        <div>
                            <div id="login">

                                {{#if loginError}}
                                    <p class="alert">{{loginError}}</p>
                                {{/if}}

                                <form action="/auth/login" method="post">
                                    <div class="input-field">
                                        <input id="email" name="email" type="email" class="validate" required>
                                        <label for="email">Email</label>
                                        <span class="helper-text" data-error="Введите email"></span>
                                    </div>
                                    <div class="input-field">
                                        <input id="password" name="password" type="password" class="validate" required>
                                        <label for="password">Пароль</label>
                                        <span class="helper-text" data-error="Введите пароль"></span>
                                    </div>
                                    <input type="hidden" name="_csrf" value="{{csrf}}">
                                    <p><a href="#resetPopup" class="popup-link">Забыли пароль?</a></p>
                                    <button class="btn btn-primary" type="submit">Войти</button>
                                </form>
                            </div>
                            <div class="popup-list">
                                <ul>
                                    <li><a href="#registerPopup" class="popup-link">Регистрация</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="registerPopup" class="popup">
        <div class="popup__body">
            <div class="popup__content">

                <a href="#" class="popup__close close-popup">X</a>
                <div class="popup__title">Регистрация</div>
                <div class="popup__text">
                    <div class="auth">
                        <div>
                            <div id="register">
                                {{#if registerError}}
                                    <p class="alert">{{registerError}}</p>
                                {{/if}}
                                <form action="/auth/register" method="post">
                                    <div class="input-field">
                                        <input id="reemail" name="email" type="email" class="validate" required>
                                        <label for="reemail">Email</label>
                                        <span class="helper-text" data-error="Введите email"></span>
                                    </div>
                                    <div class="input-field">
                                        <input id="rpassword" name="password" type="password" class="validate" required>
                                        <label for="rpassword">Пароль</label>
                                        <span class="helper-text" data-error="Введите пароль"></span>
                                    </div>
                                    <div class="input-field">
                                        <input id="confirm" name="confirm" type="password" class="validate" required>
                                        <label for="confirm">Пароль еще раз</label>
                                        <span class="helper-text" data-error="Введите пароль еще раз"></span>
                                    </div>
                                    <div class="input-field">
                                        <input id="name" name="name" type="text" class="validate" required>
                                        <label for="name">Ваше имя</label>
                                        <span class="helper-text" data-error="Введите имя"></span>
                                    </div>
                                    <input type="hidden" name="_csrf" value="{{csrf}}">
                                    <button class="btn btn-primary" type="submit">Зарегистрироваться</button>

                                </form>
                            </div>
                        </div>
                        <div class="popup-list">
                            <ul>
                                <li><a href="#loginPopup" class="popup-link">Войти</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="resetPopup" class="popup">
        <div class="popup__body">
            <div class="popup__content">

                <a href="#" class="popup__close close-popup">X</a>
                <div class="popup__title">Восстановить пароль</div>
                <div class="popup__text">
                    <div class="row">
                        <div class="col s6 offset-s3">
                            {{#if error}}
                                <p class="alert">{{error}}</p>
                            {{/if}}
                            <form action="/auth/reset" method="post">
                                <div class="input-field">
                                    <input id="email" name="email" type="email" class="validate" required>
                                    <label for="email">Email</label>
                                    <span class="helper-text" data-error="Введите email"></span>
                                </div>

                                <input type="hidden" name="_csrf" value="{{csrf}}">
                                <button class="btn btn-primary" type="submit">Сбросить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


