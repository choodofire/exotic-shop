<h1>Добавить животное</h1>
{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}


<form action="/add" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Название животного</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
        <label for="price">Цена животного</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">URL фото</label>
        <span class="helper-text" data-error="Введите URL-картинку"></span>
    </div>
    <div class="input-field">
        <textarea id="description" name="description" class="materialize-textarea">{{data.description}}</textarea>
        <label for="description">Введите описание</label>
        <span class="helper-text" data-error="Введите описание"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Добавить животное</button>
</form>


